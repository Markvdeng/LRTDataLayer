### Datalayer for the pageview ###

window.dataLayer = window.dataLayer || [];
window.dataLayer.push({
  event: 'eec.impressionView',
  ecommerce: {
    impressions: [{
      id: 'match_id_1',
      name: 'Wales v Italy',
      category: 'Six Nations',
      list: 'Home Page',
      brand: 'Wales',
      position: 1
    },{
      id: 'match_id_2',
      name: 'France v England',
      category: 'Six Nations',
      list: 'Home Page',
      brand: 'France',
      position: 2
    }]
  }
})

### Datalayer for the click on the match ###

window.dataLayer.push({
  event: 'eec.impressionClick',
  ecommerce: {
    click: {
      actionField: {
        list: 'Home Page'
      },
      products: [{
        id: 'match_id_1',
        name: 'Wales v Italy',
        category: 'Six Nations',
        brand: 'Wales',
        position: 1
      }]
    }
  }
});
